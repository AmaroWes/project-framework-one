                <select asp-for="DeliverymanId" class="form-control" asp-items="ViewBag.DeliverymanId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Bill" class="control-label">Bill</label>
                <input asp-for="Bill" class="form-control" />
                <span asp-validation-for="Bill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Amount</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
